# Use a node 16 base image
FROM node:16-alpine

# Create the app directory
WORKDIR /usr/src/app

# Install git
RUN apk add git

# Copy context files
COPY ./package.json ./
COPY packages/generic/core/package.json ./packages/generic/core/
COPY packages/generic/sso/package.json ./packages/generic/sso/
COPY packages/generic/sso/sso_idp_metadata.xml /usr/src/app
COPY packages/generic/sso/sso_idp_metadata_pb.xml /usr/src/app
COPY packages/generic/sso/certificat_vm.pem /usr/src/app
COPY packages/generic/sso/sp_key.pem /usr/src/app
COPY packages/generic/backend/package.json ./packages/generic/backend/
COPY packages/courDeCassation/package.json ./packages/courDeCassation/
COPY yarn.lock ./

# Install dependencies
RUN yarn install --pure-lockfile
COPY . .

RUN yarn build:backend

# Start the app
CMD ["yarn", "start:backend"]
