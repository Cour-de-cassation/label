{
  "description": "EIG 4 - LABEL Challenge",
  "devDependencies": {
    "@lerna/filter-options": "^3.20.0",
    "husky": "^4.3.0",
    "lerna": "~3.22.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn compile && yarn test && yarn lint"
    }
  },
  "name": "label",
  "private": true,
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.4.1",
    "**/@typescript-eslint/parser": "^4.4.1"
  },
  "scripts": {
    "backendUp": "git pull && yarn && yarn dockerBackendBuild && yarn dockerBackendStart",
    "backendBuild": "lerna run --ignore @label/client build --stream",
    "backendStart": "lerna run --scope @label/backend start --stream",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "cleanAll": "lerna run cleanAll && rimraf -rf ./node_modules",
    "clientBuild": "lerna run --ignore @label/backend build --stream",
    "clientStart": "yarn compile && cd packages/generic/client && yarn start",
    "compile": "lerna run compile",
    "dockerBackendBuild": "docker-compose -f docker-compose-backend.yml build",
    "dockerBackendStart": "docker-compose -f docker-compose-backend.yml up",
    "dockerClientBuild": "docker-compose -f docker-compose-client.yml build",
    "dockerClientStart": "docker-compose -f docker-compose-client.yml up",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "type": "lerna run type"
  },
  "workspaces": [
    "packages/generic/*",
    "packages/courDeCassation/*"
  ]
}
