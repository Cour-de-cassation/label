{
  "description": "EIG 4 - LABEL Challenge",
  "devDependencies": {
    "@lerna/filter-options": "^3.20.0",
    "husky": "^4.3.0",
    "lerna": "~3.22.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn compile && yarn test && yarn lint"
    }
  },
  "name": "label",
  "private": true,
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.4.1",
    "**/@typescript-eslint/parser": "^4.4.1"
  },
  "scripts": {
    "bootstrap": "lerna run compile && lerna run --scope @label/backend --scope @label/client bootstrap --stream && mv ./packages/generic/backend/templates/docker-compose-local.yml ./ && mv ./packages/generic/backend/templates/docker-compose-prod.yml ./ && mv ./packages/generic/backend/templates/docker-compose-client.yml ./ && mv ./packages/generic/backend/templates/startProd.sh ./scripts",
    "build": "lerna run build --stream ",
    "buildLocal": "lerna run --ignore @label/client build --stream",
    "buildLocalDocker": "docker-compose -f docker-compose-local.yml build",
    "buildProd": "yarn build && cp -r packages/generic/client/build/ packages/generic/backend/",
    "buildProdDocker": "docker-compose -f docker-compose-prod.yml build",
    "clean": "lerna run clean",
    "cleanAll": "lerna run cleanAll && rimraf -rf ./node_modules",
    "compile": "lerna run compile",
    "compileClient": "lerna run --ignore @label/backend --ignore @label/cour-de-cassation-sder-connector --ignore @label/cour-de-cassation-nlp-annotator compile ",
    "lint": "lerna run lint",
    "startLocal": "scripts/startLocal.sh",
    "startLocalClient": "yarn compileClient && cd packages/generic/client && yarn start",
    "startLocalDocker": "docker-compose -f docker-compose-local.yml up",
    "startProd": "scripts/startProd.sh",
    "startProdDocker": "docker-compose -f docker-compose-prod.yml up",
    "test": "lerna run test",
    "type": "lerna run type",
    "up": "git pull && yarn && yarn bootstrap && yarn buildProdDocker && yarn startProdDocker"
  },
  "workspaces": [
    "packages/generic/*",
    "packages/courDeCassation/*"
  ]
}
