    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"]
}
