{
  "name": "@label/client",
  "version": "1.0.0",
  "private": true,
  "homepage": "/label",
  "scripts": {
    "build": "yarn clean && react-scripts build",
    "clean": "rimraf -rf ./dist && rimraf -rf ./build",
    "clean:all": "yarn clean && rimraf -rf ./node_modules",
    "compile": "tsc -p tsconfig.json",
    "fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
    "start": "PORT=55432 react-scripts start",
    "test": "RUN_MODE=TEST jest --passWithNoTests",
    "test:coverage": "RUN_MODE=TEST jest --passWithNoTests --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src/",
    "setupFiles": [
      "core-js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setupTests.ts"
    ],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$"
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "dependencies": {
    "@label/core": "*",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@types/dateformat": "^5.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.55",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/string-template": "^1.0.2",
    "@types/styled-components": "4.0.3",
    "axios": "^0.24.0",
    "dateformat": "^5.0.3",
    "http2": "^3.3.7",
    "pelta-design-system": "https://github.com/Cour-de-cassation/pelta-design-system#e508f818ac443ad048e5cd1b74f42ec7f0bd046d",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "sder-core": "https://github.com/Cour-de-cassation/sder-core#8afb44f74c9ffefbbadc6f0d3de0def1c916dcc7",
    "string-template": "^1.0.0",
    "styled-components": "4.0.3",
    "superstatic": "^7.1.0",
    "typescript": "~4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/axios": "^0.14.0",
    "@types/react": "^16.9.49",
    "@types/testing-library__dom": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "jest": "24.9.0",
    "prettier": "^2.1.2",
    "react-dev-utils": "^10.2.1",
    "rimraf": "^3.0.2"
  }
}
