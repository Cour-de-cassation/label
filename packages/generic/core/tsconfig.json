{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../../tsconfig.json",
  "include": ["src"]
}
